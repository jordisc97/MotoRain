# MotoRain Telegram Bot Configuration
# ==================================

# Bot Configuration
BOT_NAME=MotoRain Weather Bot
BOT_USERNAME=motorain_weather_bot

# Weather API Configuration
WEATHER_API_URL=http://localhost:8000
CHROMEDRIVER_PATH=../chromedriver/chromedriver.exe

# Database Configuration
USER_SETTINGS_FILE=user_settings.json

# Notification Settings
CHECK_INTERVAL_MINUTES=30
MORNING_COMMUTE_BUFFER_MINUTES=30
EVENING_COMMUTE_BUFFER_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=motorain_bot.log

# Security
MAX_MESSAGE_LENGTH=4096
RATE_LIMIT_PER_USER=10  # messages per minute
